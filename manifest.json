{
  "manifest_version": 2,
  "name": "Trello Search",
  "description": "在百度或google搜索页面嵌入trello中符合条件的结果展示页面",
  "version": "1.0",
  "browser_action": {
    "default_icon": "assets/icon_16.png",
    "default_popup": "popup.html",
    "default_title": "trello auth"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery.js",
        "content/search.js"
      ],
      "matches": [
        "*://*.baidu.com/*",
        "*://*.google.cn/*",
        "*://*.google.com/*",
        "*://*.google.com.hk/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "browsingData",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "idle",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "popup.html",
    "search_result.html"
  ]
}